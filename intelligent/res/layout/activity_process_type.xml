        android:paddingRight="@dimen/mar_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="1#梳理机"
            android:textSize="@dimen/text_16"/>

        <ImageView
            android:layout_width="@dimen/mar_15"
            android:layout_height="@dimen/mar_15"
            android:layout_gravity="center"
            android:src="@mipmap/go"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/line"/>

    <LinearLayout
        android:id="@+id/ll_shuliji2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_45"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_15"
        android:paddingRight="@dimen/mar_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="2#梳理机"
            android:textSize="@dimen/text_16"/>

        <ImageView
            android:layout_width="@dimen/mar_15"
            android:layout_height="@dimen/mar_15"
            android:layout_gravity="center"
            android:src="@mipmap/go"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/line"/>

    <LinearLayout
        android:id="@+id/ll_shuiciji"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_45"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_15"
        android:paddingRight="@dimen/mar_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="水刺机"
            android:textSize="@dimen/text_16"/>

        <ImageView
            android:layout_width="@dimen/mar_15"
            android:layout_height="@dimen/mar_15"
            android:layout_gravity="center"
            android:src="@mipmap/go"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/line"/>

    <LinearLayout
        android:id="@+id/ll_yuanwang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_45"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_15"
        android:paddingRight="@dimen/mar_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="圆网烘干"
            android:textSize="@dimen/text_16"/>

        <ImageView
            android:layout_width="@dimen/mar_15"
            android:layout_height="@dimen/mar_15"
            android:layout_gravity="center"
            android:src="@mipmap/go"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/line"/>
    <LinearLayout
        android:id="@+id/ll_juanrao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_45"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_15"
        android:paddingRight="@dimen/mar_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="卷绕"
            android:textSize="@dimen/text_16"/>

        <ImageView
            android:layout_width="@dimen/mar_15"
            android:layout_height="@dimen/mar_15"
            android:layout_gravity="center"
            android:src="@mipmap/go"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/line"/>

</LinearLayout>