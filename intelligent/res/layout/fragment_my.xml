<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_20"
        android:background="@color/theme_color"/>
        <TextView
            android:layout_marginTop="@dimen/mar_25"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/mar_20"
            android:id="@+id/text_name"
            android:textSize="@dimen/text_22"
            android:paddingLeft="@dimen/mar_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_60"/>



    <RelativeLayout
        android:layout_marginTop="@dimen/mar_25"
        android:id="@+id/passwordLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_color_background">
        <ImageView
            android:layout_marginLeft="@dimen/mar_10"
            android:layout_centerVertical="true"
            android:padding="@dimen/mar_6"
            android:id="@+id/iv_password"
            android:layout_width="@dimen/mar_35"
            android:layout_height="@dimen/mar_35"
            android:src="@mipmap/icon_password"/>

        <TextView
            android:layout_toRightOf="@id/iv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="@color/activity_user_list"
            android:textSize="@dimen/text_16"/>

        <ImageView
            android:id="@+id/img_right4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/go"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/lineLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_color_background">
        <ImageView
            android:layout_marginLeft="@dimen/mar_10"
            android:layout_centerVertical="true"
            android:padding="@dimen/mar_6"
            android:id="@+id/iv_linessss"
            android:layout_width="@dimen/mar_35"
            android:layout_height="@dimen/mar_35"
            android:src="@mipmap/icon_verson"/>

        <TextView
            android:layout_toRightOf="@id/iv_linessss"
            android:id="@+id/text_linesss_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="实时监测"
            android:textColor="@color/activity_user_list"
            android:textSize="@dimen/text_16"/>

        <ImageView
            android:id="@+id/img_right9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/go"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/versionLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_color_background">
    <ImageView
        android:layout_marginLeft="@dimen/mar_10"
        android:layout_centerVertical="true"
        android:padding="@dimen/mar_6"
        android:id="@+id/iv_verson"
        android:layout_width="@dimen/mar_35"
        android:layout_height="@dimen/mar_35"
        android:src="@mipmap/icon_verson"/>

        <TextView
            android:layout_toRightOf="@id/iv_verson"
            android:id="@+id/text_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="版本号"
            android:textColor="@color/activity_user_list"
            android:textSize="@dimen/text_16"/>
        <ImageView
            android:id="@+id/iv_red"
            android:visibility="gone"
            android:padding="@dimen/mar_8"
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:src="@mipmap/icon_red_little"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/mar_25"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/img_right5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/go"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <RelativeLayout
        android:layout_marginBottom="@dimen/mar_60"
        android:id="@+id/signout_button"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/mar_45"
        android:layout_gravity="center"
        android:paddingRight="@dimen/mar_45"
        android:layout_height="@dimen/mar_45"
        android:background="@drawable/sigin_out">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/signout"
            android:text="@string/set_login_out"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"/>

    </RelativeLayout>
</LinearLayout>
