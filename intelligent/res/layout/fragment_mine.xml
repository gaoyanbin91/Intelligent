<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_150"
        android:background="@color/theme_color">
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_fra_red"
            android:padding="@dimen/mar_7"
            android:layout_width="@dimen/mar_20"
            android:layout_height="@dimen/mar_20"
            android:layout_marginTop="@dimen/mar_25"
            android:layout_marginRight="@dimen/mar_36"
            android:src="@mipmap/icon_red_little"
            android:layout_alignParentRight="true"/>
        <RelativeLayout
            android:id="@+id/settingbutton"
            android:layout_width="@dimen/mar_40"
            android:layout_height="@dimen/mar_40"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/mar_20">

            <ImageView
                android:id="@+id/settingImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/mar_10"
                android:layout_marginTop="@dimen/mar_15"
                android:background="@drawable/transparent_drawable"
                android:contentDescription="@null"
                android:src="@mipmap/icon_setting"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settingbutton"
            android:layout_marginTop="@dimen/mar_10">

            <com.gao.intelligent.view.RoundImageView
                android:id="@+id/iv_photo"
                android:layout_width="@dimen/mar_50"
                android:layout_height="@dimen/mar_50"
                android:layout_marginLeft="@dimen/mar_20"
                android:src="@mipmap/champagne_bin"/>

            <TextView
                android:id="@+id/tw_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mar_20"
                android:layout_toRightOf="@id/iv_photo"
                android:text="admin"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mar_10"
                android:src="@mipmap/icon_white_back"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_new_face_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_45">

        <ImageView
            android:id="@+id/iv_last"
            android:layout_width="@dimen/mar_35"
            android:layout_height="@dimen/mar_35"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mar_10"
            android:padding="@dimen/mar_5"
            android:src="@mipmap/icon_feedback"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mar_10"
            android:layout_toRightOf="@id/iv_last"
            android:gravity="center"
            android:text="用户反馈"
            android:textSize="@dimen/text_16"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_1"
        android:layout_marginLeft="@dimen/mar_10"
        android:background="@color/gray1_1"/>
</LinearLayout>
