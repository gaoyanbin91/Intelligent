<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/mar_280"
              android:layout_height="match_parent"
              android:layout_gravity="center"

              android:background="@drawable/update_dialogbg"
              android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/mar_20"
        android:textColor="@color/black"
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在下载"
        android:paddingLeft="@dimen/mar_15"
        android:textSize="@dimen/text_16"/>

        <TextView
            android:layout_marginLeft="@dimen/mar_15"
            android:layout_marginTop="@dimen/mar_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"
            android:text="请稍后..."/>

    <!--进度条-->
    <com.gao.intelligent.view.WDSeekBar
        android:id="@+id/pb_product_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mar_30"
        android:max="100"
        android:maxHeight="5dp"
        android:minHeight="5dp"
        android:progressDrawable="@drawable/loan_pb_bg"
        android:thumb="@drawable/shape_pb_circle"
        android:thumbOffset="1dp"/>
        <LinearLayout
            android:paddingBottom="@dimen/mar_20"
            android:layout_marginRight="@dimen/mar_15"
            android:layout_marginTop="@dimen/mar_5"
            android:layout_marginLeft="@dimen/mar_15"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dialog_content2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="111"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_12"/>
            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="111"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_12"/>

        </LinearLayout>


</LinearLayout>