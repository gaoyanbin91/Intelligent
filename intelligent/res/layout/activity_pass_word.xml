<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_45"
        android:background="@color/white"
        android:elevation="0dp"
        android:gravity="left"
        android:minHeight="@dimen/mar_45"
        app:navigationIcon="@mipmap/back_black"
        app:title="">

        <TextView
            android:id="@+id/mTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="修改密码"
            android:textColor="@color/activity_txt"
            android:textSize="@dimen/text_16"/>


        <TextView
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/language_save"
            android:textColor="@color/activity_txt"
            android:textSize="14sp"
            android:visibility="gone"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_45"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar_45"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mar_10"
            android:gravity="center"
            android:text="原 密 码"
            android:textSize="@dimen/text_16"
            />

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_45"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/mar_10"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_45"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mar_10"
            android:gravity="center"
            android:text="新 密 码"
            android:textSize="@dimen/text_16"
            />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_45"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入新密码(不少于6位字符)"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/mar_10"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar_45"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mar_10"
            android:gravity="center"
            android:text="确认密码"
            android:textSize="@dimen/text_16"
            />

        <EditText
            android:id="@+id/et_repeat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_45"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/mar_10"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"/>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/mar_170"/>
    <Button

        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_45"
        android:layout_margin="@dimen/mar_20"
        android:layout_marginTop="@dimen/mar_150"
        android:background="@drawable/background_newlogin_gobutton_orange"
        android:text="确定修改"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"/>

</LinearLayout>